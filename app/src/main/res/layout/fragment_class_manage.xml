<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/attendingClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:text="수업 관리"
            android:textSize="30sp" />


        <View
            android:layout_marginVertical="10dp"
            android:background="#999999"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수업 이름"
                android:id="@+id/textView1"
                android:textSize="24dp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="2"/>

            <TextView
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 수강 인원 : "
                android:id="@+id/textView2"
                android:textSize="16dp"
                android:textColor="#666666"
                android:textAlignment="textEnd"
                android:layout_weight="1"/>

            <TextView
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시간 : 00:00~00:00"
                android:id="@+id/textView3"
                android:textSize="16dp"
                android:textColor="#666666"/>

            <TextView
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정원 : 00명"
                android:id="@+id/textView4"
                android:textSize="16dp"
                android:textColor="#666666"/>

            <TextView
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="구성 : 00회(00주)"
                android:id="@+id/textView5"
                android:textSize="16dp"
                android:textColor="#666666"/>

            <TextView
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="남은 수강 횟수 : "
                android:textStyle="bold"
                android:id="@+id/textView7"
                android:textSize="16dp"
                android:textColor="#ff0000" />

            <TextView
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가격 : 1,000,000W"
                android:id="@+id/textView6"
                android:textSize="16dp"
                android:textColor="#666666"/>

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/memberInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:text="내 정보 관리"
            android:textSize="30sp" />


        <View
            android:layout_marginVertical="10dp"
            android:background="#999999"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <TextView
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 이름 : "
            android:id="@+id/textView10"
            android:textSize="16dp"
            android:textColor="#666666"
            android:textAlignment="textEnd"
            android:layout_weight="1"/>

        <TextView
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호 : "
            android:id="@+id/textView11"
            android:textSize="16dp"
            android:textColor="#666666"
            android:textAlignment="textEnd"
            android:layout_weight="1"/>

        <TextView
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="센터명 : "
            android:id="@+id/textView12"
            android:textSize="16dp"
            android:textColor="#666666"
            android:textAlignment="textEnd"
            android:layout_weight="1"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/soongsoong"/>


    </LinearLayout>

</LinearLayout>